<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.nalewajka.przybornik.Konwerter">


    <Button
        android:id="@+id/buttonKategoria"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_kategoria"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollHorizontally="true"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="@string/kategoria"
        android:textColor="@color/color1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/buttonWybierz1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonWybierz1"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_wybierz_lewe"
        android:selectAllOnFocus="false"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:soundEffectsEnabled="false"
        android:text="@string/z"
        android:textAlignment="center"
        android:textColor="@color/color1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/appName"
        app:layout_constraintEnd_toStartOf="@+id/editText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonKategoria" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/copy"
        android:digits="0123456789.-"
        android:gravity="center"
        android:hint="@string/podaj_liczbe"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxWidth="120dp"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:textColor="@color/color2"
        android:textColorHint="@color/color3"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/appName"
        app:layout_constraintEnd_toStartOf="@+id/buttonWybierz2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonWybierz1"
        app:layout_constraintTop_toBottomOf="@+id/buttonPaste" />

    <Button
        android:id="@+id/buttonWybierz2"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_wybierz_prawe"
        android:selectAllOnFocus="false"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:soundEffectsEnabled="false"
        android:text="@string/naco"
        android:textAlignment="center"
        android:textColor="@color/color1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toTopOf="@+id/buttonPaste" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_textview"
        android:gravity="center"
        android:singleLine="false"
        android:textColor="@color/color2"
        android:textSize="24sp"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowDy="1"
        app:layout_constraintBottom_toTopOf="@+id/buttonKonwertuj"
        app:layout_constraintEnd_toStartOf="@+id/buttonCopy"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonWybierz1" />

    <ImageButton
        android:id="@+id/buttonCopy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_paste"
        android:contentDescription="@string/image"
        android:tint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/appName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/appName"
        app:layout_constraintTop_toTopOf="@+id/appName"
        app:srcCompat="?android:attr/actionModeCopyDrawable" />

    <ImageButton
        android:id="@+id/buttonPaste"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/copy"
        android:contentDescription="@string/image"
        android:maxWidth="120dp"
        android:tint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonWybierz1"
        app:layout_constraintTop_toBottomOf="@+id/buttonKategoria"
        app:srcCompat="?android:attr/actionModePasteDrawable" />

    <Button
        android:id="@+id/buttonKonwertuj"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_konwertuj"
        android:text="@string/konwertuj"
        android:textColor="@color/color1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName" />

</androidx.constraintlayout.widget.ConstraintLayout>